@page
@model PublicCms.Web.Pages.Cms.Editor.Navigation.AddModel
@{
    ViewData["Title"] = "Lägg till sida till navigationen";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <p>Klicka på en sida nedan för att lägga till den till sajtens navigation.</p>
    <table class="table">
        <thead>
            <tr>
                <th>Sida</th>
                <th>URL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pg in Model.FilteredPages)
            {
                <tr>
                    <td><a asp-page-handler="AddPage" asp-route-pageId="@pg.Id">@pg.Name</a></td>
                    <td>/@pg.Slug</td>
                </tr>
            }
        </tbody>
    </table>
</div>