                    <a asp-route-orderNumber="@part.DisplayOrder" asp-page-handler="RemovePart" asp-route-zone="Footer">Ta bort @part.DisplayName</a>
                </span>
            }
        </div>
    }
} @*Footer Parts*@
<div class="row">
