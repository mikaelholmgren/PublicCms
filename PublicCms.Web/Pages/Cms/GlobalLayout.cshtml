        <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#newsidebar" aria-controls="newsidebar" aria-expanded="false">
            Lägg till del till sidebar
        </button>
    </div>
</div>
<div class="collapse" id="newsidebar">
