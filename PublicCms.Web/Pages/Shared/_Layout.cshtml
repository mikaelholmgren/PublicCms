@{
    string mainClass = Model.ShowSideBar ? "col-md-8" : "col-md-12";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewData["SiteName"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Themes/@ViewData["ThemeCss"]" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">@ViewData["SiteName"]</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <component type="typeof(Components.TopNavigation)" render-mode="Static" />
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsent" />
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-8">
                    @RenderBody()
                </div>
                @if (Model.ShowSideBar)
                {
                    <div class="col-md-4">
                        <component type="typeof(Components.Parts)" render-mode="Static" param-PartsModel="Model.CurrentPage.SideBar" />
                    </div>
                }
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <component type="typeof(Components.Parts)" render-mode="Static" param-PartsModel="Model.CurrentPage.Footer" />
            &copy; 2021 - @ViewData["SiteName"]
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
